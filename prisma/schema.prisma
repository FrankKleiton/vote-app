datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @default(cuid()) @id
  name String
  polls Poll[]
}

model Poll {
  id String @default(cuid()) @id
  description String
  user User
  options Option[]
  votes Vote[]
}

model Option {
  id String @default(cuid()) @id
  text String
  poll Poll
  votes Vote[]
}

model Vote {
  id String @default(cuid()) @id
  user User
  poll Poll
  option Option
}